<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.uth.facturacion.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="Fecha de Trabajo: "
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFechaTrabajo"
        android:layout_width="120dp"
        android:layout_height="34dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/editbox_background"
        android:text=""
        android:gravity="right"
        android:textColor="@color/colorGreen"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/tvFecha"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:text="Venta del DÃ­a:"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvFecha"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvVenta"
        android:layout_width="120dp"
        android:layout_height="34dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/editbox_background"
        android:textColor="@color/colorGreen"
        android:textSize="18sp"
        android:gravity="right"
        app:layout_constraintLeft_toRightOf="@+id/tvFecha"
        app:layout_constraintTop_toBottomOf="@+id/tvFechaTrabajo" />

</android.support.constraint.ConstraintLayout>
